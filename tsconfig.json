{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "baseUrl": "."
  },
  "include": ["src", "*.js", "*.mjs"]
}
